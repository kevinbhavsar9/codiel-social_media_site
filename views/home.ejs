<h1>CODIEL | HOME</h1>
<%if(locals.user){%>

    <section id="feed-posts">
        <div id="upload">
            <h3>Upload</h3>
            <form action="/post/create" id="new-post-form" method="POST">
                <!-- <textarea name="content" id="" cols="30" rows="3" placeholder="Type Your Post here....." required></textarea> -->
                <textarea class="form-control" name="content" id="exampleFormControlTextarea1" rows="3" placeholder="Type Your Post here....." required></textarea>

                <input type="hidden" name="post-id" value="">
                <!-- <input type="submit" value="Post"> -->
                <button type="submit" class="btn btn-primary" id="post-btn-submit">Post</button>

            </form>
        </div>
        <div id="posts">
            <h1>Posts</h1>




            <%for(const i of post){%>
                <div class="post-box">
                    <div class="cont">
                        <%=i.content%>
                    </div>
                    <hr>
                    <div class="user">
                        <%=i.user.name%>
                    </div>
                    <hr>
                    <%if(locals.user){%>
                    <div class="comment-container">
                        <h3>Comments</h3>
                        <hr>
                        <div class="comment-box">
                            <%for(const comment of i.comments){%>
                           <p><%=comment.content%></p>
                               
                                <p><%=comment.user.name%></p>
                                <hr>
                           <%}%>
                          
                        </div>
                        <form action="/comment/create" method="POST">
                            <input type="text" name="content" placeholder="comment" required >
                            <input type="hidden" name="post" value="<%=i._id%>">
                            <input type="submit" value="Comment">
                        </form>
                    
                    </div>
                    <%}%>





                </div>
               
            <%}%>



